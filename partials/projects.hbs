{{#if resume.projects.length}}
<section id="projects">
	<h2>Projects</h2>
	<hr>
	<div class="line"></div>
	{{#each resume.projects}}
	<div class="item">
		{{#if name}}
		<div class="name">
			{{#if website}}
                <a href="{{website}}"><h3>{{name}}</h3></a>
            {{else}}
                <h3>{{name}}</h3>
            {{/if}}
		</div>
		{{/if}}
		{{#if summary}}
		<div class="summary">
			<p>{{summary}}</p>
		</div>
		{{/if}}
	</div>
	{{/each}}
</section>
{{/if}}